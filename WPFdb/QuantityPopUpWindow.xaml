<Window x:Class="WPFdb.QuantityPopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFdb"
        mc:Ignorable="d"
        Title="QuantityPopUpWindow" Height="150" Width="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="77,16,0,0" VerticalAlignment="Top" Width="57" Grid.Row="1" Click="btnConfirm_click" />
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="10,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="61" Click="btnCancel_click"/>
        <TextBox x:Name="txtQuantity" HorizontalAlignment="Left" Height="32" Margin="21,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="91" />
        <ScrollBar Minimum="-100" Maximum="0" HorizontalAlignment="Left" Margin="95,30,0,0" VerticalAlignment="Top" Width="17" ValueChanged="ScrollBar_QuantityChanged"/>

    </Grid>
</Window>
